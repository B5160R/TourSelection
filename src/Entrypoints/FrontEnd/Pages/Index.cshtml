@page
@model FrontEnd.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header text-center bg-primary text-white">
                <h2 class="text-center">Tour Selection</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Model.Name"></label>
                        <input asp-for="Model.Name" class="form-control" />
                        <span asp-validation-for="Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model.Email"></label>
                        <input asp-for="Model.Email" class="form-control" />
                        <span asp-validation-for="Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model.Tour"></label>
                        <select asp-for="Model.Tour" class="form-control">
                            <option value="">Select a Tour</option>
                            <option value="Tour1">Tour 1</option>
                            <option value="Tour2">Tour 2</option>
                            <option value="Tour3">Tour 3</option>
                        </select>
                        <span asp-validation-for="Model.Tour" class="text-danger"></span>
                    </div>
                    </br>
                    <div class="form-group">
                        <label>Select an action:</label>
                        <div class="form-check">
                            <input type="radio" asp-for="Model.Action" value="Booking" class="form-check-input" />
                            <label class="form-check-label">Booking</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="Model.Action" value="Cancel" class="form-check-input" />
                            <label class="form-check-label">Cancel</label>
                        </div>
                        <span asp-validation-for="Model.Action" class="text-danger"></span>
                    </div> 
                    <div class="form-group">
                        <div class="form-check">
                            <input type="radio" asp-for="Model.InvalidTest" value="True" class="form-check-input" />
                            <label class="form-check-label">Invalid Message Test</label>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</style>